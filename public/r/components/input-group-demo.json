  "files": [
    {
      "path": "src/registry/default/components/examples/input-group/input-group-demo.tsx",
      "content": "import {\r\n  ArrowUpIcon,\r\n  CheckIcon,\r\n  InfoIcon,\r\n  PlusIcon,\r\n  Search,\r\n  SearchIcon,\r\n} from \"lucide-react\";\r\n\r\nimport {\r\n  InputGroup,\r\n  InputGroupAddon,\r\n  InputGroupButton,\r\n  InputGroupInput,\r\n  InputGroupText,\r\n  InputGroupTextarea,\r\n} from \"@/registry/default/components/ui/input-group\";\r\nimport {\r\n  Tooltip,\r\n  TooltipTrigger,\r\n  TooltipPopup,\r\n  TooltipProvider,\r\n} from \"@/registry/default/components/ui/tooltip\";\r\nimport {\r\n  Menu,\r\n  MenuItem,\r\n  MenuPopup,\r\n  MenuTrigger,\r\n} from \"@/registry/default/components/ui/menu\";\r\nimport { Separator } from \"@/registry/default/components/ui/separator\";\r\n\r\nexport function InputGroupDemo() {\r\n  return (\r\n    <div className=\"grid w-full max-w-sm gap-6\">\r\n      <InputGroup>\r\n        <InputGroupInput\r\n          type=\"search\"\r\n          placeholder=\"Search\"\r\n          aria-label=\"Search\"\r\n        />\r\n        <InputGroupAddon>\r\n          <SearchIcon />\r\n        </InputGroupAddon>\r\n      </InputGroup>\r\n\r\n      <InputGroup>\r\n        <InputGroupInput placeholder=\"Search...\" />\r\n        <InputGroupAddon>\r\n          <Search />\r\n        </InputGroupAddon>\r\n        <InputGroupAddon align=\"inline-end\">12 results</InputGroupAddon>\r\n      </InputGroup>\r\n\r\n      <InputGroup>\r\n        <InputGroupInput placeholder=\"example.com\" className=\"pl-1!\" />\r\n        <InputGroupAddon>\r\n          <InputGroupText>https://</InputGroupText>\r\n        </InputGroupAddon>\r\n        <InputGroupAddon align=\"inline-end\">\r\n          <TooltipProvider>\r\n            <Tooltip>\r\n              <TooltipTrigger\r\n                render={\r\n                  <InputGroupButton className=\"rounded-full\" size=\"icon-xs\" />\r\n                }\r\n              >\r\n                <InfoIcon />\r\n              </TooltipTrigger>\r\n              <TooltipPopup>This is content in a tooltip.</TooltipPopup>\r\n            </Tooltip>\r\n          </TooltipProvider>\r\n        </InputGroupAddon>\r\n      </InputGroup>\r\n\r\n      <InputGroup>\r\n        <InputGroupTextarea placeholder=\"Ask, Search or Chat...\" />\r\n        <InputGroupAddon align=\"block-end\">\r\n          <InputGroupButton\r\n            variant=\"outline\"\r\n            className=\"rounded-full\"\r\n            size=\"icon-xs\"\r\n          >\r\n            <PlusIcon />\r\n          </InputGroupButton>\r\n          <Menu>\r\n            <MenuTrigger render={<InputGroupButton variant=\"ghost\" />}>\r\n              <span>Auto</span>\r\n            </MenuTrigger>\r\n            <MenuPopup side=\"top\" align=\"start\" className=\"[--radius:0.95rem]\">\r\n              <MenuItem>Auto</MenuItem>\r\n              <MenuItem>Agent</MenuItem>\r\n              <MenuItem>Manual</MenuItem>\r\n            </MenuPopup>\r\n          </Menu>\r\n          <InputGroupText className=\"ml-auto\">52% used</InputGroupText>\r\n          <Separator orientation=\"vertical\" className=\"h-4!\" />\r\n          <InputGroupButton\r\n            variant=\"default\"\r\n            className=\"rounded-full\"\r\n            size=\"icon-xs\"\r\n            disabled\r\n          >\r\n            <ArrowUpIcon />\r\n            <span className=\"sr-only\">Send</span>\r\n          </InputGroupButton>\r\n        </InputGroupAddon>\r\n      </InputGroup>\r\n\r\n      <InputGroup>\r\n        <InputGroupInput placeholder=\"@shadcn\" />\r\n        <InputGroupAddon align=\"inline-end\">\r\n          <div className=\"bg-primary text-primary-foreground flex size-4 items-center justify-center rounded-full\">\r\n            <CheckIcon className=\"size-3\" />\r\n          </div>\r\n        </InputGroupAddon>\r\n      </InputGroup>\r\n    </div>\r\n  );\r\n}\r\n",
      "type": "registry:example"
    }
  ]
}
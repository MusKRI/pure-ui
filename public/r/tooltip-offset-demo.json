      "path": "src/registry/pure-ui/examples/tooltip/tooltip-offset-demo.tsx",
      "content": "import {\r\n  Tooltip,\r\n  TooltipTrigger,\r\n  TooltipPopup,\r\n  TooltipProvider,\r\n} from \"@/registry/pure-ui/ui/tooltip\";\r\nimport { Button } from \"@/registry/pure-ui/ui/button\";\r\n\r\nexport const TooltipOffsetDemo = () => {\r\n  return (\r\n    <div className=\"flex items-center flex-wrap gap-4\">\r\n      <TooltipProvider>\r\n        <Tooltip>\r\n          <TooltipTrigger\r\n            render={<Button size=\"sm\" variant=\"outline\" radius=\"none\" />}\r\n          >\r\n            Default Offset (4)\r\n          </TooltipTrigger>\r\n          <TooltipPopup sideOffset={4}>\r\n            <p>Tooltip Content</p>\r\n          </TooltipPopup>\r\n        </Tooltip>\r\n\r\n        <Tooltip>\r\n          <TooltipTrigger\r\n            render={<Button size=\"sm\" variant=\"outline\" radius=\"none\" />}\r\n          >\r\n            15 Offset\r\n          </TooltipTrigger>\r\n          <TooltipPopup sideOffset={15}>\r\n            <p>Tooltip Content</p>\r\n          </TooltipPopup>\r\n        </Tooltip>\r\n\r\n        <Tooltip>\r\n          <TooltipTrigger\r\n            render={<Button size=\"sm\" variant=\"outline\" radius=\"none\" />}\r\n          >\r\n            -15 Offset\r\n          </TooltipTrigger>\r\n          <TooltipPopup sideOffset={-15}>\r\n            <p>Tooltip Content</p>\r\n          </TooltipPopup>\r\n        </Tooltip>\r\n      </TooltipProvider>\r\n    </div>\r\n  );\r\n};\r\n",
      "type": "registry:example"
    }
  ]
}